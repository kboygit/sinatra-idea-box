<html>
  <head>
    <meta charset="utf-8">
    <title>IdeaBox</title>
  </head>
  <body>
    <h1>IdeaBox</h1>
    <form action="/" method="POST">
      <h3>Existing Ideas</h3>
      <ul>
        <% ideas.each_with_index do |idea, id| %>
        <li>
          <%= idea.title %>(<%= id %>)<br/>
          <%= idea.description %>
          <form action="/<%= id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE"/>
            <input type="submit" value="delete"/>
          </form>
        </li>
        <% end %>
      </ul>
